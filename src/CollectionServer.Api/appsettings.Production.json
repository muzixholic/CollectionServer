{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Error"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "${DATABASE_CONNECTION_STRING}"
  },
  "RateLimiting": {
    "PermitLimit": 200,
    "WindowSeconds": 60,
    "QueueLimit": 20
  },
  "ExternalApis": {
    "GoogleBooks": {
      "ApiKey": "${GOOGLE_BOOKS_API_KEY}",
      "BaseUrl": "https://www.googleapis.com/books/v1",
      "Priority": 1,
      "TimeoutSeconds": 10
    },
    "KakaoBook": {
      "ApiKey": "${KAKAO_API_KEY}",
      "BaseUrl": "https://dapi.kakao.com",
      "Priority": 2,
      "TimeoutSeconds": 10
    },
    "AladinApi": {
      "ApiKey": "${ALADIN_API_KEY}",
      "BaseUrl": "http://www.aladin.co.kr/ttb/api",
      "Priority": 3,
      "TimeoutSeconds": 10
    },
    "TMDb": {
      "ApiKey": "${TMDB_API_KEY}",
      "BaseUrl": "https://api.themoviedb.org/3",
      "Priority": 1,
      "TimeoutSeconds": 10
    },
    "OMDb": {
      "ApiKey": "${OMDB_API_KEY}",
      "BaseUrl": "http://www.omdbapi.com",
      "Priority": 2,
      "TimeoutSeconds": 10
    },
    "MusicBrainz": {
      "BaseUrl": "https://musicbrainz.org/ws/2",
      "UserAgent": "CollectionServer/1.0 (contact@example.com)",
      "Priority": 1,
      "TimeoutSeconds": 10
    },
    "Discogs": {
      "ApiKey": "${DISCOGS_API_KEY}",
      "ApiSecret": "${DISCOGS_API_SECRET}",
      "BaseUrl": "https://api.discogs.com",
      "Priority": 2,
      "TimeoutSeconds": 10
    }
  }
}
